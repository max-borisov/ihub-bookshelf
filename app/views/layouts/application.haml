!!!
%html
  %head
    %title BookShelf
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      / Static navbar
      %nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "/"} Pragmatic bookshelf
          #navbar.navbar-collapse.collapse
            - if user_signed_in?
              %ul.nav.navbar-nav.navbar-right
                %li.dropdown
                  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    Actions
                    %span.caret
                  %ul.dropdown-menu{:role => "menu"}
                    %li= link_to 'Profile', '#'
                    %li= link_to 'Log out', destroy_user_session_path, method: :delete
                    - if current_user.admin?
                      %li.divider
                      %li.dropdown-header Admin
                      %li= link_to 'Add book', new_book_path
              %ul.nav.navbar-nav.navbar-right
                %li.nav-user-name
                  %span
                    Hi, #{current_user.fullname}
                %li
                  %a{:href => '#'}
                    %span.glyphicon.glyphicon-shopping-cart{"aria-hidden" => "true"}
                    \Â 
                    %span.badge 110
            - else
              %ul.nav.navbar-nav.navbar-right
                %li
                  = link_to('Sign in', new_user_session_path)
          / /.nav-collapse
        / /.container-fluid
      / %p.notice= notice
      / %p.alert= alert
      = yield
    = # render 'shared/debug' if Rails.env.development?